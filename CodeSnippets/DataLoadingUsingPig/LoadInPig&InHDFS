csv2 = LOAD '/Data/QueryResultsCleanTwo.csv' USING org.apache.pig.piggybank.storage.CSVExcelStorage(',', 'YES_MU
LTILINE','NOCHANGE','SKIP_INPUT_HEADER') AS (Id:int, PostTypeId:int,  AcceptedAnswerId:int, ParentId:int, CreationD
